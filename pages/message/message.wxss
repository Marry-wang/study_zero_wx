.message-info {
  flex: 1;
}

.message-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

.message-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
  margin-left: 10rpx;
}

.empty-message {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  background: #e0e0e0;
  border-radius: 12rpx;
  display: inline-block;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}