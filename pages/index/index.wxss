/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.login-container {
  padding: 40rpx;
  margin-top: 100rpx;
}

.logo-area {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.login-form {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input-box {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.login-btn {
  margin-top: 40rpx;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 0;
  text-align: center;
  font-size: 32rpx;
}

.login-btn:active {
  opacity: 0.8;
}

.other-login {
  margin-top: 40rpx;
  text-align: center;
}

.other-login-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.other-login-icons {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.other-icon {
  width: 80rpx;
  height: 80rpx;
}
