.home-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(to right, #07c160, #0ab356);
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

/* 替换头像图片为占位符 */
.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border: 4rpx solid #fff;
}

.user-detail {
  margin-left: 20rpx;
}

.nickname {
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
}

.user-id {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 8rpx;
}

.edit-btn {
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border: 2rpx solid #fff;
  border-radius: 30rpx;
}

/* 数据概览区域 */
.data-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
}

.data-item {
  text-align: center;
}

.number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

/* 菜单区域 */
.menu-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

/* 替换菜单图标为占位符 */
.menu-icon-placeholder {
  width: 40rpx;
  height: 40rpx;
  background-color: #e0e0e0;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 替换箭头图标为占位符 */
.arrow-icon-placeholder {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
  margin-right: 10rpx;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 40rpx 20rpx;
  background: #fff;
  color: #ff4d4f;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
} 