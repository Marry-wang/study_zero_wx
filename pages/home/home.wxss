.home-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 背景图区域 */
.banner-section {
  height: 360rpx;
  background: linear-gradient(to right bottom, #07c160, #0ab356);
  position: relative;
  overflow: hidden;
  padding: 40rpx;
  box-sizing: border-box;
}

.banner-section::after {
  content: '';
  position: absolute;
  right: -100rpx;
  top: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.banner-content {
  position: relative;
  z-index: 1;
  color: #fff;
}

.welcome-text {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 44rpx;
  font-weight: bold;
}

/* 快捷功能区 */
.quick-access {
  margin: -60rpx 20rpx 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.quick-item {
  text-align: center;
}

.quick-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f0f9f4;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 10rpx;
}

.quick-text {
  font-size: 24rpx;
  color: #333;
}

/* 功能区域 */
.feature-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.feature-item {
  text-align: center;
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  background: #f0f9f4;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 10rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #333;
}

/* 推荐区域 */
.recommend-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.recommend-list {
  margin-top: 20rpx;
}

.recommend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.recommend-item:last-child {
  border-bottom: none;
}

.recommend-content {
  flex: 1;
}

.recommend-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.recommend-desc {
  font-size: 24rpx;
  color: #999;
}

.recommend-right {
  display: flex;
  align-items: center;
}

.recommend-tag {
  font-size: 24rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
} 