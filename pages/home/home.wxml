<navigation-bar title="个人中心" back="{{false}}" color="white" background="transparent"></navigation-bar>
<view class="home-container">
  <!-- 用户信息区域 -->
  <view class="user-section">
    <view class="user-info">
      <view class="avatar-placeholder"></view>
      <view class="user-detail">
        <text class="nickname">{{userInfo.nickName || '用户昵称'}}</text>
        <text class="user-id">ID: {{userInfo.userId || '--'}}</text>
      </view>
    </view>
    <view class="edit-btn" bindtap="handleEditProfile">编辑资料</view>
  </view>

  <!-- 数据概览 -->
  <view class="data-section">
    <view class="data-item">
      <text class="number">0</text>
      <text class="label">收藏</text>
    </view>
    <view class="data-item">
      <text class="number">0</text>
      <text class="label">关注</text>
    </view>
    <view class="data-item">
      <text class="number">0</text>
      <text class="label">足迹</text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view 
      class="menu-item" 
      wx:for="{{menuList}}" 
      wx:key="text"
      bindtap="handleMenuClick"
      data-url="{{item.url}}"
    >
      <view class="menu-icon-placeholder"></view>
      <text class="menu-text">{{item.text}}</text>
      <view class="arrow-icon-placeholder"></view>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="logout-btn" bindtap="handleLogout">退出登录</view>
</view> 